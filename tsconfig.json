{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "removeComments": true,
    "moduleResolution": "NodeNext",
    "declaration": true,
    "sourceMap": true,
    "rootDir": ".",
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["lib/**/*", "bin/**/*", "test/**/*"],
  "exclude": [
    "node_modules",
    "cdk.out",
    "dist"
  ]
}
